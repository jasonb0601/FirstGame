<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jason.firstgame.MainActivity"
    android:background="#22df14">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="12sp">

        <TextView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="@string/matrix_placeholder"
            android:id="@+id/puzzleArray"
            android:textColor="#f20c0c"
            android:textStyle="bold"
            android:layout_above="@+id/gridLayout"
            android:layout_marginBottom="33dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="2.88"
            android:textSize="14pt" />

        <Button
            android:text="Generate New Horror"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:id="@+id/newPuzzleButton"
            android:layout_below="@+id/puzzleArray"
            android:layout_alignEnd="@+id/puzzleArray"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="64dp"
            android:layout_weight="1.16" />

        <TextView
            android:text="Mantis Toboggan, M.D."
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@android:color/background_dark"
            android:layout_weight="5.97" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/empty_tile"
            android:layout_alignBottom="@+id/puzzleArray"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:src="@drawable/tile2"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:src="@drawable/tile3"
            android:layout_below="@+id/puzzleArray"
            android:layout_alignEnd="@+id/imageView6"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:src="@drawable/tile4"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:src="@drawable/tile5"
            android:layout_below="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/tile6" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView7"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignStart="@+id/puzzleArray"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/tile7" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/tile8" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView9"
            android:layout_above="@+id/imageView3"
            android:layout_alignStart="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/tile9" />
    </GridLayout>


</RelativeLayout>
